{
  "name": "quizarena",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "start:web": "cd apps/web && pnpm run preview --port 3001 --host 0.0.0.0",
    "db:generate": "cd packages/database && pnpm dlx prisma generate",
    "start:http": "cd apps/httpServer && node dist/index.js",
    "start:webSocket": "cd apps/webSocketServer && node dist/server.js"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "5.9.2",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
